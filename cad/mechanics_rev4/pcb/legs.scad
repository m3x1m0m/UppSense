/////////////////////////////////////////////////////////////////////////////////
// Action
/////////////////////////////////////////////////////////////////////////////////
module legs()
{
	difference()
	{
	union()
	{
		// Legs at the left
		for(y = [0, 1])
		translate([glass_slide_width/2 - leg_pos_x, -y*leg_distance,0])
		cylinder(r = leg_outer_dia/2, h = leg_height);
		// Legs at the right
		for(y = [0, 1])
		translate([-glass_slide_width/2 + leg_pos_x, y*leg_distance, 0])
		cylinder(r = leg_outer_dia/2, h = leg_height);
	}
	union()
	{
		// Legs at the left
		for(y = [0, 1])
		translate([glass_slide_width/2 - leg_pos_x, -y*leg_distance, -0.01])
		cylinder(r = leg_inner_dia/2, h = leg_drill_depth);
		// Legs at the right
		for(y = [0, 1])
		translate([-glass_slide_width/2 + leg_pos_x, y*leg_distance, -0.01])
		cylinder(r = leg_inner_dia/2, h = leg_drill_depth);

	}
	}
}

