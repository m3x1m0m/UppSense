module legs()
{
	difference()
	{
	union()
	{
		// Leg
		translate([0, - leg_depth/2 + leg_diff1/2, leg_height/2])
		cube([leg_width, leg_depth, leg_height], center = true);
	}
	union()
	{
		// Drill holes
		for(y = [0, 1])
		translate([0, -y*leg_distance, -0.01])
		cylinder(r = leg_inner_dia/2, h = leg_drill_depth);
		
	}
}
}

