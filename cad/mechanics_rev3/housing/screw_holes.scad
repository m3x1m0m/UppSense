module screw_holes(xdim, ydim, dia, depth)
{
/////////////////////////////////////////////////////////////////////////
// Vars
/////////////////////////////////////////////////////////////////////////


/////////////////////////////////////////////////////////////////////////
// Action
/////////////////////////////////////////////////////////////////////////
union(){
	for(x=[-1, +1])
	for(y=[-1, +1])
		translate([x*xdim/2, y*ydim/2, 0])
		cylinder(r = dia/2, h = depth, center =true);
}
}
